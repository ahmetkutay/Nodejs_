extends layout/main-layout.pug

block title
    title #{docTitle}
block styles 
    link(rel="stylesheet", href="/css/shop.css")

block content 
    main
        if prods.length > 0
            each product in prods
                p #{product.title}
                button Add Cart
        else    
            h1 No Products


